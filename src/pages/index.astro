---
import BaseLayout from '@/layouts/BaseLayout.astro';
import PostListItem from '@/components/PostListItem.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const recentPosts = posts
  .filter((post) => post.data.published)
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .slice(0, 5);
---

<BaseLayout>
  <div class="mx-auto max-w-3xl">
    <!-- Hero Section -->
    <section class="mb-16 space-y-4 text-center">
      <h1 class="font-mono text-4xl font-bold sm:text-5xl">
        <span class="text-blue-600 dark:text-blue-400">Hello</span>, World!
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        개발하며 배운 것들을 기록하는 공간입니다.
      </p>
      <div class="flex justify-center gap-4 font-mono text-sm">
        <a href="/blog" class="text-blue-600 hover:underline dark:text-blue-400"> /blog → </a>
        <a href="/about" class="text-blue-600 hover:underline dark:text-blue-400"> /about → </a>
      </div>
    </section>

    <!-- Recent Posts -->
    <section>
      <h2 class="mb-8 font-mono text-xl font-semibold text-gray-900 dark:text-gray-100">
        <span class="text-blue-600 dark:text-blue-400">$</span> recent_posts
      </h2>

      <div class="space-y-2">
        {recentPosts.map((post, index) => <PostListItem post={post} index={index} />)}
      </div>

      {
        posts.length > 5 && (
          <div class="mt-8 text-center">
            <a
              href="/blog"
              class="inline-flex items-center gap-2 font-mono text-sm text-blue-600 hover:underline dark:text-blue-400"
            >
              모든 포스트 보기
              <span>→</span>
            </a>
          </div>
        )
      }
    </section>
  </div>
</BaseLayout>
