---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout>
  <main class="container">
    <h1>Astro Notion Blog</h1>
    <p>개발 중입니다...</p>

    <nav>
      <ul>
        <li><a href="/blog">블로그</a></li>
        <li><a href="/projects">프로젝트</a></li>
        <li><a href="/about">소개</a></li>
      </ul>
    </nav>
  </main>
</BaseLayout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  nav ul {
    list-style: none;
    padding: 0;
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
  }

  nav a {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
  }

  nav a:hover {
    text-decoration: underline;
  }
</style>
