---
export interface Props {
  title?: string;
  description?: string | undefined;
  image?: string | undefined;
  type?: 'website' | 'article';
  noindex?: boolean;
}

const { title = 'DevBlog', description, image, type = 'website', noindex = false } = Astro.props;

const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://example.com';
const canonicalUrl = `${siteUrl}${Astro.url.pathname}`;
const imageUrl = image ? `${siteUrl}${image}` : `${siteUrl}/og-default.png`;
---

<title>{title}</title>
<meta name="title" content={title} />
{description && <meta name="description" content={description} />}
<link rel="canonical" href={canonicalUrl} />

<!-- Open Graph -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={title} />
{description && <meta property="og:description" content={description} />}
<meta property="og:image" content={imageUrl} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalUrl} />
<meta property="twitter:title" content={title} />
{description && <meta property="twitter:description" content={description} />}
<meta property="twitter:image" content={imageUrl} />

{noindex && <meta name="robots" content="noindex, nofollow" />}
